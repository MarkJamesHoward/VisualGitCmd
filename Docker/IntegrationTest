FROM  mcr.microsoft.com/dotnet/sdk:9.0-alpine

RUN apk update
RUN apk add git

WORKDIR /App/docker-test-folder
RUN git init
RUN git config --global user.email "markjameshoward@hotmail.co.uk"
RUN git config --global user.name "Mark Howard"
RUN git add .
RUN git commit -m "initial commit"
RUN git branch feature

WORKDIR /App/VisualGitCmd
#ENTRYPOINT ["tail", "-f", "/dev/null"]
ENTRYPOINT ["dotnet", "run", "--no-launch-profile", "--", "-s", "-p", "/App/VisualGitCmd/docker-test-folder", "-j", "/App/Test/ActualJson"]
